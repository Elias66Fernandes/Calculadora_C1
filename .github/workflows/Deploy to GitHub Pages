name: Deploy to GitHub Pages
on:
  push:
    branches:
      - main # ou a branch que você deseja monitorar

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout Repository
      uses: actions/checkout@v2

    - name: Setup Node.js
      uses: actions/setup-node@v2
      with:
        node-version: [14.x, 16.x, 18.x] # ou a versão do Node.js que você está usando

    - name: Install Dependencies
      run: npm install # ou yarn install, dependendo do gerenciador de pacotes que você está usando

    - name: Build
      run: npm run build # ou o comando que você usa para construir seu projeto

    - name: Test
      run: npm test 

    - name: Deploy to GitHub Pages
      run: |
        git config --global user.email "hudsoncdiniz@gmail.com"
        git config --global user.name "Hudson390"
        echo "machine github.com login ${{ secrets.GITHUB_TOKEN }}" > ~/.netrc
        npm run deploy # ou o comando que você usa para fazer o deploy






